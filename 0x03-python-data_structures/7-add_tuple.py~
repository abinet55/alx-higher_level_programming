#!/usr/bin/python3
def add_tuple(tuple_a=(), tuple_b=()):
    len_a = len(tuple_a)
    len_b = len(tuple_b)

    if len_a == 0:
        1a = 0
        2a = 0
    elif len_a == 1:
        1a = tuple_a[0]
        2a = 0
    else:
        1a = tuple_a[0]
        2a = tuple_a[1]

    if len_b == 0:
        1b = 0
        2b = 0
    elif len_b == 1:
        1b = tuple_b[0]
        2b = 0
    else:
        1b = tuple_b[0]
        2b = tuple_b[1]

    new_tuple = (1a + 1b, 2a + 2b)

    return (new_tuple)
